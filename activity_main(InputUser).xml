<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="361dp"
        android:layout_height="39dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:text="Menjumlahkan 2 bilangan"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/txt1"
        android:layout_below="@+id/textView"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:text="Masukan Bilangan Pertama"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <EditText
        android:id="@+id/txtBil1"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt1"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/txt2"
        android:layout_below="@id/txtBil1"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginTop="30dp"
        android:text="Masukan Bilangan Kedua"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <EditText
        android:id="@+id/txtBil2"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt2"
        android:textColor="@color/colorPrimary"
        />

    <Button
        android:id="@+id/btnhasil"
        android:layout_below="@+id/txtBil2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Hitung Bilangan"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/txtHasil"
        android:layout_below="@+id/btnhasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil Penjumlahan"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/SlateGrey"/>

    <EditText
        android:id="@+id/hasil"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_below="@+id/txtHasil"
        android:layout_centerHorizontal="true"



        />

</RelativeLayout>